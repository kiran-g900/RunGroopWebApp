@using LayerDAL.ViewModel;
@model LayerDAL.ViewModel.EditUserDashBoardViewModel;

<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Pace">Pace</label>
        <input asp-for="Pace" class="form-control" placeholder="Pace">
        <span asp-validation-for="Pace" class="text-dangerger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mileage">Mileage</label>
        <input asp-for="Mileage" class="form-control" placeholder="Mileage">
        <span asp-validation-for="Mileage" class="text-dangerger"></span>
    </div>   
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="City">
        <span asp-validation-for="City" class="text-dangerger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" placeholder="State">
        <span asp-validation-for="State" class="text-dangerger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Profile Image</label>
        <input type="file" asp-for="Image" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-dangerger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
