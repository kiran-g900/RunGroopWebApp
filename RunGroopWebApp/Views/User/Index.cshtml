@using LayerDAL.ViewModel
@model List<UserViewModel>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var user in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        @*<img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@user.Image" />*@
                        <div class="card-body">
                            <p class="card-text">@user.UserName</p>                           
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Detail" asp-controller="User" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-action="Edit" asp-controller="Club" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-action="Delete" asp-controller="Club" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>